<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004800FF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_count"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/blue"
        android:minHeight="55dp"
        android:onClick="increase_count"
        android:text="@string/count"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@id/button_zero"
        app:layout_constraintTop_toBottomOf="@id/button_zero" />

    <Button
        android:id="@+id/button_zero"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:backgroundTint="@color/gray"
        android:minHeight="55dp"
        android:onClick="reset_count"
        android:text="@string/zero"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="@id/button_toast"
        app:layout_constraintTop_toBottomOf="@id/button_toast" />


    <Button
        android:id="@+id/button_toast"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/lightblue"
        android:minHeight="55dp"
        android:onClick="show_toast"
        android:text="@string/toast"
        android:textColor="@color/white"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toStartOf="@id/text_display_count"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_display_count"
        android:layout_width="241dp"
        android:layout_height="325dp"
        android:layout_margin="8dp"
        android:background="#FFFF00"
        android:gravity="center"
        android:text="@string/count_value"
        android:textColor="#303F9F"
        android:textSize="150sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_toast"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />
</androidx.constraintlayout.widget.ConstraintLayout>
